  <!-- Cuadro de respuesta con toolbar integrada -->
  {{! <div class="d-none" data-visible-on="linkedin"> }}
  <div>
    <!-- Acciones superiores: hereda tokens del contenedor root ({{network}}) -->
    <div class="lsc-actions d-flex gap-2 my-2 d-none" data-visible-on="linkedin">
      <a id="{{buttonid}}" class="btn btn-social"
        href="{{shareurl}}" target="_blank" rel="noopener"
        data-action="open-link">
        {{buttonlabel}}
      </a>
    </div>

    <div class="lsc-response-wrap">
      <div class="lsc-toolbar">
        <button class="btn btn-sm btn-primary"
          id="{{aibuttonid}}"
          data-action="run-ai"
          data-target="#{{responseid}}"
          data-mode="word"
          data-speed="40"
          data-certname="{{certname}}"
          data-course="{{course}}"
          data-org="{{org}}"
          data-socialmedia="{{network}}">
          {{aibuttonlabel}}
        </button>
        <button class="btn btn-sm btn-outline-secondary"
          title="{{copytextlabel}}"
          data-action="copy-html"
          data-target="#{{responseid}}">
          üìã
        </button>
      </div>

      <div id="{{responseid}}" class="lsc-response" aria-live="polite"></div>
    </div>

    <!-- Datos del certificado -->
    <div class="lsc-certdata">
      <div class="lsc-copycard lsc-copycard--full"
          role="button" tabindex="0"
          title="Download image"
          data-action="download-image"
          data-url="{{imageurl}}">
        <div class="lsc-copybtn" aria-hidden="true">‚¨áÔ∏è</div>
        <div class="lsc-k">Download the Certificate Image</div>
        <div class="lsc-v">
          <img id="{{imageid}}" src="{{imageurl}}" alt="Miniatura del certificado" class="lsc-thumb lsc-thumb--wide">
        </div>
      </div>
    </div>
  </div>
</div>
